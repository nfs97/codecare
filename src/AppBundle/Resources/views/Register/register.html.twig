{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/app/css/login.css') }}"/>
{% endblock %}

{% block body %}
    <section class="login">
        <article>
            <h1>Register</h1>
            <form class="form-group" action="{{ path('user_register') }}" method="post">
                {{ form_errors(form) }}

                {{ form_row(form.username, {
                    'attr' : {'class':'a-clever-class '},
                    'help' : 'Choose a unique and clever username',
                    'label' : 'Username:'
                }) }}
                {{ form_row(form.plainPassword.first, {
                    'label' : 'Password:'
                }) }}
                {{ form_row(form.plainPassword.second, {
                    'label' : 'Repeat password:'
                }) }}

                {{ form_rest(form) }}
                <hr/>
                <input type="submit" value="Register!" class="btn btn-primary pull-right"/>
            </form>
        </article>
    </section>
{% endblock %}