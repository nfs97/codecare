{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="col-xs-2">
        <h2 class="sub-header"><a href="/">Home</a></h2>
        <p type="button" class="btn btn-primary btn-lg btn-block">Categories</p>
        {% for category in categories %}
            <a class="btn btn-default btn-lg btn-block" href="{{ category.name }}">{{ category.name }}</a>
        {% endfor %}
    </div>
    <div class="col-xs-10">
        <h2 class="sub-header">Products of {{ category_name }} </h2>
        <p type="button" class="btn btn-primary btn-sm">Product name</p>
        <hr/>
        {% for product in pagination %}
            <p type="button" class="btn btn-default btn-sm">{{ product.name }}</p>
            <br>
        {% endfor %}
        <div class="text-center">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}